<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/itemTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/wifiName"
            android:text="Wifi Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textStyle="normal|bold"
            android:textColor="#212121"
            android:textSize="22sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/setPrettyNameButton"
            android:text="Set Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/setExhibitButton"
            android:text="Set Exhibit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <TextView
        android:id="@+id/wifiNameRaw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wifi Name Raw"
        android:layout_below="@id/itemTop"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>



    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#c0c0c0"
        android:layout_below="@+id/wifiNameRaw"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>